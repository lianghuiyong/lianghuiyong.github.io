<section class="read-more">
     <% if (page.prev || page.next){ %>      
    
        <% if (page.prev){ %>       
            <div class="read-more-item">
                <span class="read-more-item-dim">最近的文章</span>
                <h2 class="post-list__post-title post-title"><a href="<%- config.root %><%- page.prev.path %>" title="<%= page.prev.title %>"><%= page.prev.title %></a></h2>

                <div class="post-list__meta"><%- partial('_partial/date',{post: page.prev}) %> &#8226; <span class="post-list__meta--tags tags">于&nbsp;<%- partial('_partial/tags',{post: page.prev}) %></span></div>
                           
            </div>
        <% } %>
        
        <% if (page.next){ %>       
            <div class="read-more-item">
                <span class="read-more-item-dim">更早的文章</span>
                <h2 class="post-list__post-title post-title"><a href="<%- config.root %><%- page.next.path %>" title="<%= page.next.title %>"><%= page.next.title %></a></h2>

                <div class="post-list__meta"><%- partial('_partial/date',{post: page.next}) %> &#8226; <span class="post-list__meta--tags tags">于&nbsp;<%- partial('_partial/tags',{post: page.next}) %></span></div>
                       
            </div>
        <% } %>
     
   <% } %>
   
  
</section>